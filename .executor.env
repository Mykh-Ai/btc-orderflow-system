Z=Europe/Bratislava

BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_BASE_URL=https://api.binance.com
# HTTP reliability (retry/backoff/failover)
BINANCE_HTTP_READ_TIMEOUT_SEC=15
# BINANCE_API_BASES can override failover list if needed
# BINANCE_API_BASES=https://api.binance.com,https://api1.binance.com,https://api2.binance.com,https://api3.binance.com

# режим: live
SYMBOL=BTCUSDC
TRADE_MODE=margin
BINANCE_DEBUG_PARAMS=1
BINANCE_DEBUG_BALANCE_MIN_SEC=30

# public price (легше, але теж throttle)
PRICE_SNAPSHOT_MIN_SEC=5 

# signed snapshot pressure point (openOrders)
SNAPSHOT_MIN_SEC=30

# manage cadence
MANAGE_EVERY_SEC=15 

# entry confirmation (твоя ціль ~10 сек)
LIVE_STATUS_POLL_EVERY=10

# fixed notional
QTY_USD=120
QTY_STEP=0.00001
MIN_QTY=0.0001
MIN_NOTIONAL=5
ASSET_STEP_SIZE_USDC=0.00000001

# margin params
MARGIN_ISOLATED=FALSE
MARGIN_SIDE_EFFECT=NO_SIDE_EFFECT
MARGIN_AUTO_REPAY_AT_CANCEL=FALSE
MARGIN_DEBT_EPS=0.01
INVAR_ENABLED=1
INVAR_PERSIST=1
INVAR_THROTTLE_SEC=60
INVAR_EVERY_SEC=60

I13_EXCHANGE_CHECK=1
I13_GRACE_SEC=300
I13_ESCALATE_SEC=180
I13_EXCHANGE_MIN_INTERVAL_SEC=120
I13_CLEAR_STATE_ON_EXCHANGE_CLEAR=true
INVAR_KILL_ON_DEBT=0

# safety/check
RECV_WINDOW=5000
MAX_PEAK_AGE_SEC=600
POLL_SEC=5

# connection test 
LIVE_VALIDATE_ONLY=0

# price steps
TICK_SIZE=0.01
ENTRY_OFFSET_USD=0.5
PREFLIGHT_EXPECT_QUOTE=USDC

# входи
DELTASCOUT_LOG=/data/logs/deltascout.log
AGG_CSV=/data/feed/aggregated.csv
ENTRY_MODE=LIMIT_THEN_MARKET
LIVE_ENTRY_TIMEOUT_SEC=90

# Plan B guard (захист від “догону” маркетом)
PLANB_MAX_DEV_R_MULT=0.25
PLANB_MAX_DEV_USD=0
PLANB_REQUIRE_PRICE=1
PLANB_ABORT_IF_PAST_TP1=1

# Trailer stop
TRAIL_SOURCE=AGG
TRAIL_UPDATE_EVERY_SEC=60
TRAIL_SWING_LOOKBACK=240
TRAIL_SWING_LR=15
TRAIL_SWING_BUFFER_USD=50
TRAIL_STEP_USD=25

# виходи
STATE_FN=/data/state/executor_state.json
EXEC_LOG=/data/logs/executor.log
LOG_MAX_LINES=200

# webhook в n8n (внутрішній, по docker-мережі)
N8N_WEBHOOK_URL=http://n8n:5678/webhook/executor-alert
N8N_BASIC_AUTH_USER=alekseenkomisha79@gmail.com
N8N_BASIC_AUTH_PASSWORD=
ALERT_WEBHOOK_TIMEOUT=3 
ALERT_WEBHOOK_ENABLED=1
# Trailing confirm (wait for breakout)
TRAIL_CONFIRM_BUFFER_USD=20
